---
// Footer component
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-content">
      <div class="copyright">
        <p>&copy; {currentYear} Instrumetriq. All rights reserved.</p>
      </div>
      <div class="footer-links">
        <a href="/legal/terms">Terms</a>
        <a href="/legal/privacy">Privacy</a>
        <a href="/legal/disclaimer">Disclaimer</a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-xl) 0;
    margin-top: auto;
  }
  
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-md);
  }
  
  .copyright p {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }
  
  .footer-links {
    display: flex;
    gap: var(--space-md);
  }
  
  .footer-links a {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  
  .footer-links a:hover {
    color: var(--color-accent);
  }
  
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
