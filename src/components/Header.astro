---
// Header component with navigation
const currentPath = Astro.url.pathname;
const DEBUG_LAYOUT = false;
---

<header class:list={[DEBUG_LAYOUT && 'debug-layout']}>
  <div class="container header__inner">
    <div class="header-content">
      <a href="/" class="brand">
        <img src="/logo/instrumetriq-logo.svg" alt="instrumetriq" />
      </a>
      <nav>
        <a href="/research" class:list={[currentPath === '/research' && 'active']}>Research</a>
        <a href="/dataset" class:list={[currentPath === '/dataset' && 'active']}>Dataset</a>
        <a href="/status" class:list={[currentPath === '/status' && 'active']}>Status</a>
        <a href="/updates" class:list={[currentPath === '/updates' && 'active']}>Updates</a>
        <a href="/contact" class:list={[currentPath === '/contact' && 'active']}>Contact</a>
      </nav>
    </div>
  </div>
</header>

<style>
  header {
    height: var(--header-h);
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    display: flex;
    align-items: center;
    padding: 0;
    background: linear-gradient(to bottom, rgba(26, 26, 26, 0.98), rgba(26, 26, 26, 0.95));
    backdrop-filter: blur(8px);
    z-index: 100;
  }

  header > .header__inner {
    height: 100%;
    display: flex;
    align-items: center;
  }
  
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }
  
  .brand {
    display: flex;
    align-items: center;
    height: 100%;
    margin-left: calc(var(--logo-pad-x) * -1);
    padding-left: var(--logo-pad-x);
    transition: opacity var(--transition-fast);
  }
  
  .brand:hover {
    opacity: 0.85;
  }
  
  .brand:focus {
    outline: 2px solid var(--accent);
    outline-offset: 4px;
    border-radius: 2px;
  }
  
  .brand img {
    height: 34px;
    width: auto;
    display: block;
  }
  
  nav {
    display: flex;
    align-items: center;
    gap: var(--space-5);
  }
  
  nav a {
    font-size: 0.9375rem;
    color: var(--text-muted);
    position: relative;
    padding-bottom: 0.25rem;
    transition: color var(--transition-fast);
  }
  
  nav a:hover {
    color: var(--text);
  }
  
  nav a.active {
    color: var(--text);
  }
  
  nav a:hover::after,
  nav a.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: var(--accent);
  }
  
  @media (max-width: 768px) {
    header {
      height: var(--header-h-mobile);
    }

    .brand img {
      height: 28px;
    }
    
    nav {
      gap: var(--space-4);
    }
    
    nav a {
      font-size: 0.875rem;
    }
  }

  /* Debug mode: confirms the "true header box" + logo area; disabled by default */
  .debug-layout {
    background: rgba(255, 0, 0, 0.06);
  }

  .debug-layout .header-content {
    outline: 1px solid rgba(0, 188, 212, 0.5);
    outline-offset: -1px;
  }

  .debug-layout .brand {
    outline: 1px solid rgba(255, 255, 255, 0.5);
    outline-offset: -1px;
  }
</style>
