<script>
  // Phase 3B: Public sample entries interactivity
  document.addEventListener('DOMContentLoaded', () => {
    // Expand/collapse JSON
    const expandButtons = document.querySelectorAll('.expand-btn');
    expandButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const row = btn.closest('tr');
        if (!row) return;
        
        const idx = row.getAttribute('data-idx');
        if (!idx) return;
        
        const jsonRow = document.getElementById(`json-${idx}`);
        if (!jsonRow) return;
        
        if (jsonRow.style.display === 'none') {
          jsonRow.style.display = 'table-row';
          btn.classList.add('expanded');
          btn.textContent = 'â–¼';
        } else {
          jsonRow.style.display = 'none';
          btn.classList.remove('expanded');
          btn.textContent = 'â–¶';
        }
      });
    });
    
    // Search by symbol
    const searchInput = document.getElementById('symbolSearch') as HTMLInputElement | null;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const target = e.target as HTMLInputElement;
        if (!target) return;
        
        const query = target.value.toLowerCase();
        const rows = document.querySelectorAll('.sample-row');
        
        rows.forEach(row => {
          const symbolCell = row.querySelector('.symbol-cell');
          if (!symbolCell || !symbolCell.textContent) return;
          
          const symbol = symbolCell.textContent.toLowerCase();
          const idx = (row as HTMLElement).getAttribute('data-idx');
          const jsonRow = idx ? document.getElementById(`json-${idx}`) : null;
          
          const htmlRow = row as HTMLElement;
          if (symbol.includes(query)) {
            htmlRow.style.display = '';
          } else {
            htmlRow.style.display = 'none';
            if (jsonRow) jsonRow.style.display = 'none';
          }
        });
      });
    }
    
    // Column sorting
    const headers = document.querySelectorAll('.sample-table thead th[data-sort]');
    let sortState: { column: string | null; ascending: boolean } = { column: null, ascending: true };
    
    headers.forEach(header => {
      header.addEventListener('click', () => {
        const column = header.getAttribute('data-sort');
        if (!column) return;
        
        const table = document.getElementById('sampleTable');
        if (!table) return;
        
        const tbody = table.querySelector('tbody');
        if (!tbody) return;
        
        const rows = Array.from(tbody.querySelectorAll('.sample-row'));
        
        // Toggle sort direction if clicking same column
        if (sortState.column === column) {
          sortState.ascending = !sortState.ascending;
        } else {
          sortState.column = column;
          sortState.ascending = true;
        }
        
        // Sort rows
        rows.sort((a, b) => {
          let aVal, bVal;
          
          switch (column) {
            case 'symbol':
              const aSymbol = a.querySelector('.symbol-cell');
              const bSymbol = b.querySelector('.symbol-cell');
              if (!aSymbol?.textContent || !bSymbol?.textContent) return 0;
              aVal = aSymbol.textContent;
              bVal = bSymbol.textContent;
              return sortState.ascending ? aVal.localeCompare(bVal) : bVal.localeCompare(aVal);
            
            case 'spread_bps':
            case 'liq_global_pct':
            case 'posts_total':
            case 'mean_score':
              const headerParent = header.parentElement;
              if (!headerParent) return 0;
              const colIdx = Array.from(headerParent.children).indexOf(header);
              const aElem = a.children[colIdx];
              const bElem = b.children[colIdx];
              aVal = aElem?.textContent ? parseFloat(aElem.textContent) : 0;
              bVal = bElem?.textContent ? parseFloat(bElem.textContent) : 0;
              return sortState.ascending ? aVal - bVal : bVal - aVal;
            
            case 'added_ts':
              const headerParent2 = header.parentElement;
              if (!headerParent2) return 0;
              const tsIdx = Array.from(headerParent2.children).indexOf(header);
              const aTs = a.children[tsIdx];
              const bTs = b.children[tsIdx];
              if (!aTs?.textContent || !bTs?.textContent) return 0;
              aVal = aTs.textContent;
              bVal = bTs.textContent;
              return sortState.ascending ? aVal.localeCompare(bVal) : bVal.localeCompare(aVal);
            
            default:
              return 0;
          }
        });
        
        // Rebuild tbody
        rows.forEach(row => {
          const idx = row.getAttribute('data-idx');
          const jsonRow = idx ? document.getElementById(`json-${idx}`) : null;
          tbody.appendChild(row);
          if (jsonRow) tbody.appendChild(jsonRow);
        });
        
        // Update header indicators
        headers.forEach(h => {
          const text = h.textContent;
          if (text) h.textContent = text.replace(/[â–²â–¼]/g, '').trim();
        });
        const headerText = header.textContent;
        if (headerText) {
          header.textContent = headerText + (sortState.ascending ? ' â–²' : ' â–¼');
        }
      });
    });
  });
</script>
