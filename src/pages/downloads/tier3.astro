---
export const prerender = false;

import BaseLayout from '@/layouts/BaseLayout.astro';

// Extract token from query parameters
const token = Astro.url.searchParams.get('token');
const TIER = 'tier3';

let isValid = false;
let errorMessage = '';
let debugInfo = '';

// Wrap EVERYTHING in try-catch to see any error
try {
  // Step 1: Check runtime structure
  const runtime = Astro.locals.runtime;
  debugInfo += `Runtime exists: ${!!runtime}\n`;
  debugInfo += `Runtime type: ${typeof runtime}\n`;
  debugInfo += `Runtime keys: ${runtime ? Object.keys(runtime).join(', ') : 'N/A'}\n`;
  
  if (runtime?.env) {
    debugInfo += `Env keys: ${Object.keys(runtime.env).join(', ')}\n`;
  } else {
    debugInfo += `Env: undefined\n`;
  }
  
  const bucket = runtime?.env?.DATASETS;
  debugInfo += `DATASETS exists: ${!!bucket}\n`;
  debugInfo += `DATASETS type: ${typeof bucket}\n`;
  
  if (bucket) {
    // Try to list methods on the bucket
    debugInfo += `DATASETS methods: ${Object.keys(bucket).slice(0, 5).join(', ')}\n`;
  }
  
  // Step 2: Try to fetch token state from R2
  if (!token) {
    errorMessage = 'Missing access token.';
  } else if (!bucket) {
    errorMessage = 'R2 bucket binding not available';
  } else {
    debugInfo += `Attempting to fetch config/tier_tokens.json...\n`;
    
    const object = await bucket.get('config/tier_tokens.json');
    debugInfo += `Object fetched: ${!!object}\n`;
    
    if (!object) {
      errorMessage = 'Token state file not found in R2';
    } else {
      const text = await object.text();
      debugInfo += `Text length: ${text.length}\n`;
      
      const state = JSON.parse(text);
      debugInfo += `State version: ${state.version}\n`;
      debugInfo += `Tiers: ${Object.keys(state.tiers).join(', ')}\n`;
      
      // Check token validity
      const tierState = state.tiers[TIER];
      if (!tierState) {
        errorMessage = `Tier ${TIER} not found in token state`;
      } else {
        const currentToken = tierState.current_token;
        const nextToken = tierState.next_token;
        const overlapActive = tierState.overlap_active;
        
        debugInfo += `Current token exists: ${!!currentToken}\n`;
        debugInfo += `Current token prefix: ${currentToken?.substring(0, 10)}...\n`;
        debugInfo += `Provided token prefix: ${token.substring(0, 10)}...\n`;
        debugInfo += `Tokens match: ${token === currentToken}\n`;
        
        if (token === currentToken) {
          isValid = true;
        } else if (overlapActive && token === nextToken) {
          isValid = true;
        } else {
          errorMessage = 'Invalid or expired token';
        }
      }
    }
  }
} catch (error) {
  errorMessage = `Error: ${error instanceof Error ? error.message : String(error)}`;
  debugInfo += `\nCaught error: ${error instanceof Error ? error.stack : String(error)}`;
}

if (!isValid) {
  Astro.response.status = 403;
}
---

<BaseLayout 
  title="Tier 3 Downloads - Instrumetriq" 
  description="Access your Tier 3 (Researcher) dataset downloads"
>
  <div class="downloadPage">
    <header class="downloadPage__header">
      <h1>Tier 3 Downloads</h1>
      <p class="downloadPage__subtitle">Researcher — Complete Archive Access</p>
    </header>

    {!isValid ? (
      <div class="downloadPage__error">
        <h2>Access Denied</h2>
        <p>{errorMessage}</p>
        <p>If you're a Patreon supporter, please use the download link from your tier's weekly post.</p>
        <p>New links are posted every Sunday. Previous links remain valid until Monday midnight UTC.</p>
      </div>
    ) : (
      <div class="downloadPage__content">
        <div class="downloadPage__loading">
          <p>Loading available downloads...</p>
        </div>

        <div class="downloadPage__downloads" style="display: none;">
          <section class="downloadSection">
            <h2>Month-to-Date Bundle</h2>
            <p class="downloadSection__description">
              All days from the current month merged into a single file.
              Updated daily at 02:30 UTC.
            </p>
            <div id="mtd-container"></div>
          </section>

          <section class="downloadSection">
            <h2>Daily Files (Last 7 Days)</h2>
            <p class="downloadSection__description">
              Individual daily exports. Each file contains one day of scored posts.
            </p>
            <div id="daily-container"></div>
          </section>

          <div class="downloadPage__footer">
            <p class="downloadPage__updated">Last updated: <span id="last-updated"></span></p>
            <p class="downloadPage__help">
              Need help? Visit the <a href="/dataset">Dataset</a> page for schema documentation.
            </p>
          </div>
        </div>
      </div>
    )}
  </div>

  <script define:vars={{ token, TIER }}>
    if (token) {
      // Fetch downloads from API
      fetch(`/api/downloads/${TIER}?token=${encodeURIComponent(token)}`)
        .then(res => res.json())
        .then(data => {
          const loadingEl = document.querySelector('.downloadPage__loading');
          const downloadsEl = document.querySelector('.downloadPage__downloads');
          
          if (!data.success) {
            loadingEl.innerHTML = `<p class="error">${data.error}</p>`;
            return;
          }

          // Hide loading, show downloads
          loadingEl.style.display = 'none';
          downloadsEl.style.display = 'block';

          // Populate MTD
          const mtdContainer = document.getElementById('mtd-container');
          if (data.mtd) {
            mtdContainer.innerHTML = `
              <div class="downloadItem downloadItem--featured">
                <div class="downloadItem__info">
                  <strong>${data.mtd.month}</strong>
                  <span class="downloadItem__meta">${data.mtd.days_included} days • ${formatBytes(data.mtd.size_bytes)}</span>
                </div>
                <div class="downloadItem__actions">
                  <a href="${data.mtd.download_url}" class="downloadButton downloadButton--primary" download>
                    Download Parquet
                  </a>
                  <button class="downloadButton downloadButton--expand" data-manifest-url="${data.mtd.manifest_url}" data-target="mtd-manifest">
                    Manifest
                  </button>
                </div>
              </div>
              <div class="manifestPanel" id="mtd-manifest" style="display: none;">
                <div class="manifestPanel__header">
                  <span>Manifest — ${data.mtd.month}</span>
                  <a href="${data.mtd.manifest_url}" class="manifestPanel__download" download>Download JSON</a>
                </div>
                <pre class="manifestPanel__content"><code>Loading...</code></pre>
              </div>
            `;
          } else {
            mtdContainer.innerHTML = '<p class="downloadSection__empty">Month-to-date bundle not yet available.</p>';
          }

          // Populate Daily (last 7)
          const dailyContainer = document.getElementById('daily-container');
          const dailyFiles = data.daily.slice(0, 7);
          
          if (dailyFiles.length > 0) {
            dailyContainer.innerHTML = dailyFiles.map((item, idx) => `
              <div class="downloadItem">
                <div class="downloadItem__info">
                  <strong>${item.date}</strong>
                  <span class="downloadItem__meta">${formatBytes(item.size_bytes)}</span>
                </div>
                <div class="downloadItem__actions">
                  <a href="${item.download_url}" class="downloadButton downloadButton--primary" download>
                    Download
                  </a>
                  <button class="downloadButton downloadButton--expand" data-manifest-url="${item.manifest_url}" data-target="daily-manifest-${idx}">
                    Manifest
                  </button>
                </div>
              </div>
              <div class="manifestPanel" id="daily-manifest-${idx}" style="display: none;">
                <div class="manifestPanel__header">
                  <span>Manifest — ${item.date}</span>
                  <a href="${item.manifest_url}" class="manifestPanel__download" download>Download JSON</a>
                </div>
                <pre class="manifestPanel__content"><code>Loading...</code></pre>
              </div>
            `).join('');
          } else {
            dailyContainer.innerHTML = '<p class="downloadSection__empty">No daily files available yet.</p>';
          }

          // Add expand button handlers
          document.querySelectorAll('.downloadButton--expand').forEach(btn => {
            btn.addEventListener('click', async (e) => {
              const targetId = btn.getAttribute('data-target');
              const manifestUrl = btn.getAttribute('data-manifest-url');
              const panel = document.getElementById(targetId);
              
              if (!panel) return;
              
              if (panel.style.display === 'none') {
                panel.style.display = 'block';
                btn.classList.add('active');
                
                // Load manifest content if not loaded
                const codeEl = panel.querySelector('code');
                if (codeEl && codeEl.textContent === 'Loading...') {
                  try {
                    const res = await fetch(manifestUrl);
                    const manifest = await res.json();
                    codeEl.textContent = JSON.stringify(manifest, null, 2);
                  } catch (err) {
                    codeEl.textContent = 'Failed to load manifest';
                  }
                }
              } else {
                panel.style.display = 'none';
                btn.classList.remove('active');
              }
            });
          });

          // Update timestamp
          const lastUpdatedEl = document.getElementById('last-updated');
          const timestamp = new Date(data.generated_at);
          lastUpdatedEl.textContent = timestamp.toUTCString();
        })
        .catch(error => {
          const loadingEl = document.querySelector('.downloadPage__loading');
          loadingEl.innerHTML = '<p class="error">Failed to load downloads. Please try again later.</p>';
          console.error('Download fetch error:', error);
        });
    }

    function formatBytes(bytes) {
      if (bytes < 1024) return bytes + ' B';
      if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(2) + ' KB';
      return (bytes / (1024 * 1024)).toFixed(2) + ' MB';
    }
  </script>

  <style>
    .downloadPage {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    .downloadPage__header {
      margin-bottom: 2.5rem;
      text-align: center;
    }

    .downloadPage__header h1 {
      font-size: 2rem;
      margin-bottom: 0.5rem;
      font-weight: 600;
      letter-spacing: -0.02em;
    }

    .downloadPage__subtitle {
      color: var(--text-dim);
      font-size: 1rem;
      letter-spacing: 0.02em;
    }

    .downloadPage__error {
      background: rgba(255, 100, 100, 0.08);
      border: 1px solid rgba(255, 100, 100, 0.25);
      border-radius: 8px;
      padding: 2rem;
      text-align: center;
    }

    .downloadPage__error h2 {
      color: #ff6464;
      margin-bottom: 1rem;
      font-size: 1.25rem;
    }

    .downloadPage__error p {
      margin-bottom: 0.75rem;
      line-height: 1.6;
      color: var(--text-dim);
    }

    .downloadPage__loading {
      text-align: center;
      padding: 3rem 1rem;
      color: var(--text-dim);
    }

    .downloadSection {
      margin-bottom: 2.5rem;
    }

    .downloadSection h2 {
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      letter-spacing: -0.01em;
    }

    .downloadSection__description {
      color: var(--text-dim);
      margin-bottom: 1.25rem;
      line-height: 1.6;
      font-size: 0.9rem;
    }

    .downloadSection__empty {
      color: var(--text-dim);
      font-style: italic;
      padding: 1.5rem;
      text-align: center;
      background: rgba(255, 255, 255, 0.02);
      border-radius: 6px;
      border: 1px dashed rgba(255, 255, 255, 0.1);
    }

    .downloadItem {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.25rem;
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 6px;
      margin-bottom: 0.5rem;
      transition: border-color 0.2s;
    }

    .downloadItem:hover {
      border-color: rgba(255, 255, 255, 0.15);
    }

    .downloadItem--featured {
      background: rgba(0, 188, 212, 0.06);
      border-color: rgba(0, 188, 212, 0.25);
    }

    .downloadItem--featured:hover {
      border-color: rgba(0, 188, 212, 0.4);
    }

    .downloadItem__info {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .downloadItem__info strong {
      font-weight: 600;
      font-family: 'Courier New', monospace;
      letter-spacing: 0.02em;
    }

    .downloadItem__meta {
      font-size: 0.8rem;
      color: var(--text-dim);
      font-family: 'Courier New', monospace;
    }

    .downloadItem__actions {
      display: flex;
      gap: 0.5rem;
    }

    .downloadButton {
      padding: 0.5rem 1rem;
      border-radius: 4px;
      text-decoration: none;
      font-size: 0.8rem;
      font-weight: 500;
      transition: all 0.2s;
      cursor: pointer;
      border: none;
    }

    .downloadButton--primary {
      background: var(--accent);
      color: var(--bg-dark);
    }

    .downloadButton--primary:hover {
      filter: brightness(1.15);
      transform: translateY(-1px);
    }

    .downloadButton--expand {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.15);
      color: var(--text-base);
    }

    .downloadButton--expand:hover {
      border-color: var(--accent);
      color: var(--accent);
    }

    .downloadButton--expand.active {
      background: var(--accent);
      color: var(--bg-dark);
      border-color: var(--accent);
    }

    /* Manifest Panel */
    .manifestPanel {
      background: #0d0d0d;
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-top: none;
      border-radius: 0 0 6px 6px;
      margin-top: -0.5rem;
      margin-bottom: 0.5rem;
      overflow: hidden;
    }

    .manifestPanel__header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 1rem;
      background: rgba(255, 255, 255, 0.03);
      border-bottom: 1px solid rgba(255, 255, 255, 0.06);
      font-size: 0.8rem;
      font-weight: 500;
      color: var(--text-dim);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .manifestPanel__download {
      font-size: 0.75rem;
      color: var(--accent);
      text-decoration: none;
      padding: 0.25rem 0.5rem;
      border: 1px solid var(--accent);
      border-radius: 3px;
      text-transform: none;
      letter-spacing: normal;
      transition: all 0.2s;
    }

    .manifestPanel__download:hover {
      background: var(--accent);
      color: var(--bg-dark);
    }

    .manifestPanel__content {
      margin: 0;
      padding: 1rem;
      background: #0a0a0a;
      overflow-x: auto;
      font-size: 0.75rem;
      font-family: 'Courier New', Consolas, monospace;
      color: #a0a0a0;
      max-height: 300px;
      overflow-y: auto;
      line-height: 1.5;
    }

    .manifestPanel__content code {
      font-family: inherit;
    }

    .downloadPage__footer {
      margin-top: 2.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.08);
      text-align: center;
    }

    .downloadPage__updated {
      color: var(--text-dim);
      font-size: 0.8rem;
      margin-bottom: 0.75rem;
    }

    .downloadPage__help {
      color: var(--text-dim);
      font-size: 0.8rem;
    }

    .downloadPage__help a {
      color: var(--accent);
      text-decoration: none;
    }

    .downloadPage__help a:hover {
      text-decoration: underline;
    }

    .error {
      color: #ff6464;
    }

    @media (max-width: 640px) {
      .downloadItem {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .downloadItem__actions {
        width: 100%;
      }

      .downloadButton {
        flex: 1;
        text-align: center;
      }
    }
  </style>
</BaseLayout>
