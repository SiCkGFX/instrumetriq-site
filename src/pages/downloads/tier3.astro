---
export const prerender = false;

import BaseLayout from '@/layouts/BaseLayout.astro';

// Extract token from query parameters
const token = Astro.url.searchParams.get('token');
const TIER = 'tier3';

let isValid = false;
let errorMessage = '';
let debugInfo = '';

// Wrap EVERYTHING in try-catch to see any error
try {
  // Step 1: Check runtime structure
  const runtime = Astro.locals.runtime;
  debugInfo += `Runtime exists: ${!!runtime}\n`;
  debugInfo += `Runtime type: ${typeof runtime}\n`;
  debugInfo += `Runtime keys: ${runtime ? Object.keys(runtime).join(', ') : 'N/A'}\n`;
  
  if (runtime?.env) {
    debugInfo += `Env keys: ${Object.keys(runtime.env).join(', ')}\n`;
  } else {
    debugInfo += `Env: undefined\n`;
  }
  
  const bucket = runtime?.env?.DATASETS;
  debugInfo += `DATASETS exists: ${!!bucket}\n`;
  debugInfo += `DATASETS type: ${typeof bucket}\n`;
  
  if (bucket) {
    // Try to list methods on the bucket
    debugInfo += `DATASETS methods: ${Object.keys(bucket).slice(0, 5).join(', ')}\n`;
  }
  
  // Step 2: Try to fetch token state from R2
  if (!token) {
    errorMessage = 'Missing access token.';
  } else if (!bucket) {
    errorMessage = 'R2 bucket binding not available';
  } else {
    debugInfo += `Attempting to fetch config/tier_tokens.json...\n`;
    
    const object = await bucket.get('config/tier_tokens.json');
    debugInfo += `Object fetched: ${!!object}\n`;
    
    if (!object) {
      errorMessage = 'Token state file not found in R2';
    } else {
      const text = await object.text();
      debugInfo += `Text length: ${text.length}\n`;
      
      const state = JSON.parse(text);
      debugInfo += `State version: ${state.version}\n`;
      debugInfo += `Tiers: ${Object.keys(state.tiers).join(', ')}\n`;
      
      // Check token validity
      const tierState = state.tiers[TIER];
      if (!tierState) {
        errorMessage = `Tier ${TIER} not found in token state`;
      } else {
        const currentToken = tierState.current_token;
        const nextToken = tierState.next_token;
        const overlapActive = tierState.overlap_active;
        
        debugInfo += `Current token exists: ${!!currentToken}\n`;
        debugInfo += `Current token prefix: ${currentToken?.substring(0, 10)}...\n`;
        debugInfo += `Provided token prefix: ${token.substring(0, 10)}...\n`;
        debugInfo += `Tokens match: ${token === currentToken}\n`;
        
        if (token === currentToken) {
          isValid = true;
        } else if (overlapActive && token === nextToken) {
          isValid = true;
        } else {
          errorMessage = 'Invalid or expired token';
        }
      }
    }
  }
} catch (error) {
  errorMessage = `Error: ${error instanceof Error ? error.message : String(error)}`;
  debugInfo += `\nCaught error: ${error instanceof Error ? error.stack : String(error)}`;
}

if (!isValid) {
  Astro.response.status = 403;
}
---

<BaseLayout 
  title="Tier 3 Downloads - Instrumetriq" 
  description="Access your Tier 3 (Researcher) dataset downloads"
>
  <div class="pageContent">
    <header class="downloadHeader">
      <span class="downloadHeader__eyebrow">TIER 3 DOWNLOADS</span>
      <h1 class="downloadHeader__title">Researcher</h1>
      <p class="downloadHeader__subtitle">Complete Archive Access</p>
    </header>

    {!isValid ? (
      <div class="errorCard">
        <div class="errorCard__icon">⛔</div>
        <h2 class="errorCard__title">Access Denied</h2>
        <p class="errorCard__message">{errorMessage}</p>
        <div class="errorCard__help">
          <p>If you're a Patreon supporter, please use the download link from your tier's weekly post.</p>
          <p>New links are posted every Sunday. Previous links remain valid until Monday midnight UTC.</p>
        </div>
      </div>
    ) : (
      <div class="downloadContent">
        <div class="downloadLoading" id="loading-state">
          <div class="loadingSpinner"></div>
          <p>Loading available downloads...</p>
        </div>

        <div class="downloadMain" id="download-main" style="display: none;">
          <!-- MTD Section -->
          <section class="downloadSection">
            <h2 class="downloadSection__title">Month-to-Date Bundle</h2>
            <p class="downloadSection__description">
              All days from the current month merged into a single Parquet file. Updated daily at 02:30 UTC.
            </p>
            <div class="tableWrapper">
              <table class="downloadTable" id="mtd-table">
                <thead>
                  <tr>
                    <th>Period</th>
                    <th class="numeric">Days</th>
                    <th class="numeric">Size</th>
                    <th class="center-col">MTD Parquet</th>
                    <th class="center-col">Manifest</th>
                  </tr>
                </thead>
                <tbody id="mtd-body"></tbody>
              </table>
            </div>
          </section>

          <!-- Daily Files Section -->
          <section class="downloadSection">
            <h2 class="downloadSection__title">Daily Files (Last 7 Days)</h2>
            <p class="downloadSection__description">
              Individual daily exports. Each file contains one day of scored posts.
            </p>
            <div class="tableWrapper">
              <table class="downloadTable" id="daily-table">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th class="numeric">Size</th>
                    <th class="center-col">Daily Parquet</th>
                    <th class="center-col">Manifest</th>
                  </tr>
                </thead>
                <tbody id="daily-body"></tbody>
              </table>
            </div>
          </section>

          <!-- Footer -->
          <div class="downloadFooter">
            <p class="downloadFooter__timestamp" id="last-updated"></p>
            <p class="downloadFooter__help">
              Need help? Visit the <a href="/dataset">Dataset</a> page for schema documentation.
            </p>
          </div>
        </div>
      </div>
    )}
  </div>

  <script define:vars={{ token, TIER }}>
    if (token) {
      fetch(`/api/downloads/${TIER}?token=${encodeURIComponent(token)}`)
        .then(res => res.json())
        .then(data => {
          const loadingEl = document.getElementById('loading-state');
          const mainEl = document.getElementById('download-main');
          
          if (!data.success) {
            loadingEl.innerHTML = `<div class="errorInline">${data.error}</div>`;
            return;
          }

          loadingEl.style.display = 'none';
          mainEl.style.display = 'block';

          // Populate MTD table
          const mtdBody = document.getElementById('mtd-body');
          if (data.mtd) {
            mtdBody.innerHTML = `
              <tr class="dataRow" data-idx="mtd">
                <td class="dateCell">${data.mtd.month}</td>
                <td class="numeric">${data.mtd.days_included}</td>
                <td class="numeric">${formatBytes(data.mtd.size_bytes)}</td>
                <td class="downloadCell">
                  <a href="${data.mtd.download_url}" class="downloadBtn" download>
                    <span class="downloadBtn__icon">↓</span>
                    <span>Download</span>
                  </a>
                </td>
                <td class="expandCell">
                  <button class="expandBtn" data-manifest-url="${data.mtd.manifest_url}" data-target="manifest-mtd">
                    <span>Expand</span>
                    <span class="expandBtn__chevron">▼</span>
                  </button>
                </td>
              </tr>
              <tr class="manifestRow" id="manifest-mtd" style="display: none;">
                <td colspan="5">
                  <div class="manifestHeader">
                    <span>Manifest — ${data.mtd.month}</span>
                    <a href="${data.mtd.manifest_url}" class="manifestBtn" download>Download JSON</a>
                  </div>
                  <pre class="manifestContent"><code>Loading...</code></pre>
                </td>
              </tr>
            `;
          } else {
            mtdBody.innerHTML = '<tr><td colspan="5" class="emptyState">Month-to-date bundle not yet available.</td></tr>';
          }

          // Populate Daily table
          const dailyBody = document.getElementById('daily-body');
          const dailyFiles = data.daily.slice(0, 7);
          
          if (dailyFiles.length > 0) {
            dailyBody.innerHTML = dailyFiles.map((item, idx) => `
              <tr class="dataRow" data-idx="daily-${idx}">
                <td class="dateCell">${item.date}</td>
                <td class="numeric">${formatBytes(item.size_bytes)}</td>
                <td class="downloadCell">
                  <a href="${item.download_url}" class="downloadBtn" download>
                    <span class="downloadBtn__icon">↓</span>
                    <span>Download</span>
                  </a>
                </td>
                <td class="expandCell">
                  <button class="expandBtn" data-manifest-url="${item.manifest_url}" data-target="manifest-daily-${idx}">
                    <span>Expand</span>
                    <span class="expandBtn__chevron">▼</span>
                  </button>
                </td>
              </tr>
              <tr class="manifestRow" id="manifest-daily-${idx}" style="display: none;">
                <td colspan="4">
                  <div class="manifestHeader">
                    <span>Manifest — ${item.date}</span>
                    <a href="${item.manifest_url}" class="manifestBtn" download>Download JSON</a>
                  </div>
                  <pre class="manifestContent"><code>Loading...</code></pre>
                </td>
              </tr>
            `).join('');
          } else {
            dailyBody.innerHTML = '<tr><td colspan="4" class="emptyState">No daily files available yet.</td></tr>';
          }

          // Expand button handlers
          document.querySelectorAll('.expandBtn').forEach(btn => {
            btn.addEventListener('click', async () => {
              const targetId = btn.getAttribute('data-target');
              const manifestUrl = btn.getAttribute('data-manifest-url');
              const panel = document.getElementById(targetId);
              
              if (!panel) return;
              
              if (panel.style.display === 'none') {
                panel.style.display = 'table-row';
                btn.classList.add('active');
                
                const codeEl = panel.querySelector('code');
                if (codeEl && codeEl.textContent === 'Loading...') {
                  try {
                    const res = await fetch(manifestUrl);
                    const manifest = await res.json();
                    codeEl.textContent = JSON.stringify(manifest, null, 2);
                  } catch (err) {
                    codeEl.textContent = 'Failed to load manifest';
                  }
                }
              } else {
                panel.style.display = 'none';
                btn.classList.remove('active');
              }
            });
          });

          // Update timestamp
          const lastUpdatedEl = document.getElementById('last-updated');
          const timestamp = new Date(data.generated_at);
          lastUpdatedEl.textContent = `Last updated: ${timestamp.toUTCString()}`;
        })
        .catch(error => {
          const loadingEl = document.getElementById('loading-state');
          loadingEl.innerHTML = '<div class="errorInline">Failed to load downloads. Please try again later.</div>';
          console.error('Download fetch error:', error);
        });
    }

    function formatBytes(bytes) {
      if (bytes < 1024) return bytes + ' B';
      if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(2) + ' KB';
      return (bytes / (1024 * 1024)).toFixed(2) + ' MB';
    }
  </script>

  <style>
    /* Header - using pageHero pattern */
    .downloadHeader {
      text-align: center;
      padding-top: var(--space-6);
      padding-bottom: var(--space-4);
      margin-bottom: var(--space-5);
      border-bottom: 1px solid var(--border);
    }

    .downloadHeader__eyebrow {
      display: block;
      font-size: var(--font-size-xs);
      font-weight: 600;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      color: var(--text-dim);
      margin-bottom: var(--space-2);
    }

    .downloadHeader__title {
      font-size: clamp(40px, 5vw, 64px);
      font-weight: 500;
      line-height: 1.05;
      margin-bottom: var(--space-2);
    }

    .downloadHeader__subtitle {
      font-size: 1.1rem;
      color: var(--text-muted);
      line-height: 1.6;
    }

    /* Error Card */
    .errorCard {
      background: var(--panel2);
      border: 1px solid var(--border);
      border-left: 4px solid #ef4444;
      border-radius: 8px;
      padding: var(--space-5);
      text-align: center;
      max-width: 600px;
      margin: 0 auto;
    }

    .errorCard__icon {
      font-size: 2.5rem;
      margin-bottom: var(--space-3);
    }

    .errorCard__title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #ef4444;
      margin-bottom: var(--space-3);
    }

    .errorCard__message {
      color: var(--text);
      margin-bottom: var(--space-4);
      font-family: 'Courier New', monospace;
      font-size: 0.9rem;
      padding: var(--space-2) var(--space-3);
      background: rgba(0, 0, 0, 0.3);
      border-radius: 4px;
      display: inline-block;
    }

    .errorCard__help {
      color: var(--text-muted);
      font-size: 0.9rem;
      line-height: 1.6;
    }

    .errorCard__help p {
      margin-bottom: var(--space-2);
    }

    /* Loading State */
    .downloadLoading {
      text-align: center;
      padding: var(--space-6);
      color: var(--text-muted);
    }

    .loadingSpinner {
      width: 32px;
      height: 32px;
      border: 3px solid var(--border);
      border-top-color: var(--accent);
      border-radius: 50%;
      margin: 0 auto var(--space-3);
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .errorInline {
      color: #ef4444;
      padding: var(--space-4);
      background: rgba(239, 68, 68, 0.1);
      border-radius: 6px;
      border: 1px solid rgba(239, 68, 68, 0.3);
    }

    /* Sections */
    .downloadSection {
      margin-bottom: var(--space-6);
    }

    .downloadSection__title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: var(--space-2);
      letter-spacing: -0.01em;
    }

    .downloadSection__description {
      color: var(--text-muted);
      font-size: 0.9rem;
      line-height: 1.6;
      margin-bottom: var(--space-4);
    }

    /* Table Styling */
    .tableWrapper {
      overflow-x: auto;
      border-radius: 8px;
      border: 1px solid var(--border);
      background-color: var(--panel);
    }

    .downloadTable {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9rem;
      margin: 0;
    }

    .downloadTable thead th {
      position: sticky;
      top: 0;
      background-color: var(--panel2);
      padding: 14px 16px;
      text-align: left;
      font-weight: 600;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 2px solid var(--border2);
      color: var(--text-muted);
    }

    .downloadTable thead th.numeric {
      text-align: right;
    }

    .downloadTable thead th.center-col {
      text-align: center;
    }

    /* MTD table: 5 columns - Period | Days | Size | MTD Parquet | Manifest */
    #mtd-table { table-layout: fixed; }
    #mtd-table th:nth-child(1),
    #mtd-table td:nth-child(1) { width: 18%; }
    #mtd-table th:nth-child(2),
    #mtd-table td:nth-child(2) { width: 12%; text-align: right; }
    #mtd-table th:nth-child(3),
    #mtd-table td:nth-child(3) { width: 18%; text-align: right; }
    #mtd-table th:nth-child(4),
    #mtd-table td:nth-child(4) { width: 26%; text-align: center; }
    #mtd-table th:nth-child(5),
    #mtd-table td:nth-child(5) { width: 26%; text-align: center; }

    /* Daily table: 4 columns - Date | Size | Daily Parquet | Manifest */
    #daily-table { table-layout: fixed; }
    #daily-table th:nth-child(1),
    #daily-table td:nth-child(1) { width: 22%; }
    #daily-table th:nth-child(2),
    #daily-table td:nth-child(2) { width: 18%; text-align: right; }
    #daily-table th:nth-child(3),
    #daily-table td:nth-child(3) { width: 30%; text-align: center; }
    #daily-table th:nth-child(4),
    #daily-table td:nth-child(4) { width: 30%; text-align: center; }

    .downloadTable tbody tr.dataRow {
      border-bottom: 1px solid var(--border);
      transition: background-color 0.15s;
    }

    .downloadTable tbody tr.dataRow:hover {
      background-color: var(--panel2);
    }

    .downloadTable tbody td {
      padding: 14px 16px;
      line-height: 1.5;
      vertical-align: middle;
    }

    .downloadTable tbody td.dateCell {
      font-family: 'Courier New', monospace;
      color: var(--accent);
      font-weight: 600;
      font-size: 0.95rem;
    }

    .downloadTable tbody td.numeric {
      text-align: right;
      font-family: 'Courier New', monospace;
    }

    .downloadTable tbody td.emptyState {
      text-align: center;
      color: var(--text-muted);
      font-style: italic;
      padding: var(--space-4);
    }

    .downloadTable tbody td.downloadCell,
    .downloadTable tbody td.expandCell {
      text-align: center;
    }

    /* Download Button - Primary action, cyan accent */
    .downloadBtn {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      background-color: var(--accent);
      border: 1px solid var(--accent);
      color: var(--bg);
      cursor: pointer;
      font-size: 0.85rem;
      font-weight: 600;
      padding: 10px 18px;
      border-radius: 6px;
      transition: all 0.2s;
      text-decoration: none;
    }

    .downloadBtn:hover {
      filter: brightness(1.15);
      box-shadow: 0 2px 10px rgba(0, 188, 212, 0.4);
      transform: translateY(-1px);
    }

    .downloadBtn__icon {
      font-size: 1rem;
      font-weight: bold;
    }

    /* Expand Button - Secondary action, muted */
    .expandBtn {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      background-color: var(--panel);
      border: 1px solid var(--border);
      color: var(--text);
      cursor: pointer;
      font-size: 0.85rem;
      font-weight: 500;
      padding: 10px 18px;
      border-radius: 6px;
      transition: all 0.2s;
    }

    .expandBtn:hover {
      background-color: var(--panel2);
      border-color: var(--accent);
      color: var(--accent);
    }

    .expandBtn.active {
      background-color: var(--accent);
      border-color: var(--accent);
      color: var(--bg);
      box-shadow: 0 2px 8px rgba(0, 188, 212, 0.3);
    }

    .expandBtn__chevron {
      font-size: 0.7rem;
      transition: transform 0.2s;
    }

    .expandBtn.active .expandBtn__chevron {
      transform: rotate(180deg);
    }

    /* Manifest Row - Matches Dataset json-row */
    .manifestRow td {
      padding: 0 !important;
      background-color: var(--bg);
      border-top: 2px solid var(--accent-dim);
    }

    .manifestHeader {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 16px;
      background-color: var(--panel2);
      border-bottom: 1px solid var(--border);
      font-weight: 600;
      font-size: 0.85rem;
      color: var(--text);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .manifestBtn {
      background-color: var(--panel);
      border: 1px solid var(--border);
      color: var(--text);
      font-size: 0.8rem;
      font-weight: 500;
      padding: 8px 14px;
      border-radius: 6px;
      text-decoration: none;
      text-transform: none;
      letter-spacing: normal;
      transition: all 0.2s;
      display: inline-block;
    }

    .manifestBtn:hover {
      background-color: var(--accent);
      border-color: var(--accent);
      color: var(--bg);
      transform: translateY(-1px);
    }

    .manifestContent {
      margin: 0;
      padding: 20px;
      background-color: #1a1a1a;
      overflow-x: auto;
      font-size: 0.85rem;
      font-family: 'Courier New', Consolas, monospace;
      color: #d4d4d4;
      max-height: 500px;
      overflow-y: auto;
      line-height: 1.5;
    }

    .manifestContent code {
      font-family: inherit;
    }

    /* Footer */
    .downloadFooter {
      margin-top: var(--space-6);
      padding-top: var(--space-4);
      border-top: 1px solid var(--border);
      text-align: center;
    }

    .downloadFooter__timestamp {
      font-size: 0.85rem;
      color: var(--text-muted);
      margin-bottom: var(--space-2);
    }

    .downloadFooter__help {
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    .downloadFooter__help a {
      color: var(--accent);
      text-decoration: none;
    }

    .downloadFooter__help a:hover {
      text-decoration: underline;
    }

    /* Mobile Responsive */
    @media (max-width: 640px) {
      .downloadHeader__title {
        font-size: 2rem;
      }

      .downloadTable thead th,
      .downloadTable tbody td {
        padding: 10px 12px;
      }

      .actionBtn {
        padding: 6px 10px;
        font-size: 0.75rem;
        margin-left: 8px;
      }
    }
  </style>
</BaseLayout>
