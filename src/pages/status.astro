---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHero from '../components/PageHero.astro';
import statusData from '../data/status.json';

// Calculate days since start
const startDate = new Date(statusData.collection_start_date);
const lastUpdate = new Date(statusData.last_updated_iso);
const daysSinceStart = Math.floor((Date.now() - startDate.getTime()) / (1000 * 60 * 60 * 24));
---

<BaseLayout 
  title="Collection Status - Instrumetriq"
  description="Current status of Instrumetriq data collection"
>
  <PageHero
    eyebrow="STATUS"
    title="Collection Status"
    subtitle="Current snapshot of X (Twitter) collection and aggregation outputs."
  />
  <div class="pageContent">
    <section class="status-grid">
      <div class="stat-card">
        <div class="stat-label">Collection Started</div>
        <div class="stat-value">{startDate.toLocaleDateString()}</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Days Running</div>
        <div class="stat-value">{daysSinceStart}</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Total Records</div>
        <div class="stat-value">{statusData.total_records.toLocaleString()}</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Last Updated</div>
        <div class="stat-value">{lastUpdate.toLocaleDateString()}</div>
      </div>
    </section>
    
    <section>
      <h2>X (Twitter) Status</h2>
      <div class="platform-list">
        {statusData.platforms.map(platform => (
          <div class="platform-card">
            <div class="platform-header">
              <h3>{platform.name}</h3>
              <span class={`status-badge ${platform.status}`}>{platform.status}</span>
            </div>
            <p class="platform-records">{platform.records_collected.toLocaleString()} records</p>
          </div>
        ))}
      </div>
    </section>
    
    {statusData.notes && (
      <section>
        <h2>Notes</h2>
        <p class="notes">{statusData.notes}</p>
      </section>
    )}
  </div>
</BaseLayout>

<style>
  .status-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }
  
  .stat-card {
    padding: var(--space-4);
    border: 1px solid var(--border);
    border-radius: 4px;
  }
  
  .stat-label {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: var(--space-1);
  }
  
  .stat-value {
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--text);
  }
  
  .platform-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .platform-card {
    padding: var(--space-4);
    border: 1px solid var(--border);
    border-radius: 4px;
  }
  
  .platform-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }
  
  .platform-header h3 {
    margin: 0;
    font-size: 1.125rem;
  }
  
  .status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 500;
    border: 1px solid var(--border2);
    background: var(--panel);
    color: var(--text-muted);
  }
  
  .status-badge.active {
    background-color: var(--accent-subtle);
    border-color: var(--accent-dim);
    color: var(--accent);
  }
  
  .status-badge.paused {
    background-color: var(--panel2);
    color: var(--text-muted);
  }
  
  .status-badge.inactive {
    background-color: var(--panel2);
    color: var(--text-muted);
  }
  
  .platform-records {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.95rem;
  }
  
  .notes {
    padding: var(--space-4);
    background-color: var(--panel2);
    border-left: 3px solid var(--accent);
    border-radius: 4px;
  }
</style>
