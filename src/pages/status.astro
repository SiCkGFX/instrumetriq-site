---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHero from '../components/PageHero.astro';
import { parseStatusData } from '../lib/statusData';
import fs from 'node:fs';
import path from 'node:path';

// Load status data from public/data/status.json (generated by CryptoBot exporter)
// At build time, read directly from the file system
let statusDisplay;
try {
  const statusPath = path.join(process.cwd(), 'public', 'data', 'status.json');
  const rawData = JSON.parse(fs.readFileSync(statusPath, 'utf-8'));
  statusDisplay = parseStatusData(rawData);
} catch (error) {
  // Fallback: data not available
  console.error('Failed to load status data:', error);
  statusDisplay = parseStatusData(null);
}

// Load artifacts readiness
let artifactsReady;
try {
  const artifactsPath = path.join(process.cwd(), 'public', 'data', 'artifacts', 'ARTIFACTS_READY.json');
  artifactsReady = JSON.parse(fs.readFileSync(artifactsPath, 'utf-8'));
} catch (error) {
  console.error('Failed to load artifacts readiness:', error);
  artifactsReady = null;
}
---

<BaseLayout 
  title="Collection Status - Instrumetriq"
  description="Current status of Instrumetriq data collection"
>
  <PageHero
    eyebrow="STATUS"
    title="Collection Status"
    subtitle="Current snapshot of dataset metrics."
  />
  <div class="pageContent">
    {!statusDisplay.isAvailable && (
      <div class="warning-banner">
        <p>⚠️ Status data not available.</p>
      </div>
    )}
    
    {artifactsReady && (
      <section class="artifacts-readiness">
        <h2>Dataset Artifacts</h2>
        <div class={`readiness-box ${artifactsReady.status.toLowerCase()}`}>
          <div class="readiness-header">
            <strong>Validation Status:</strong>
            <span class="status-badge">{artifactsReady.status}</span>
          </div>
          <div class="readiness-details">
            <p>
              {artifactsReady.checks_passed} checks passed
              {artifactsReady.warnings.length > 0 && ` • ${artifactsReady.warnings.length} warnings`}
              {artifactsReady.errors.length > 0 && ` • ${artifactsReady.errors.length} errors`}
            </p>
            {artifactsReady.status === 'PASS' && (
              <p class="success-msg">✓ Ready for website deployment</p>
            )}
            {artifactsReady.status === 'FAIL' && artifactsReady.errors.length > 0 && (
              <p class="error-msg">First error: {artifactsReady.errors[0]}</p>
            )}
          </div>
          <div class="readiness-footer">
            Generated: {new Date(artifactsReady.generated_at_utc).toLocaleString('en-US', { timeZone: 'UTC', timeZoneName: 'short' })}
            • <a href="/dataset">View Dataset</a>
          </div>
        </div>
      </section>
    )}
    
    <section class="status-grid">
      <div class="stat-card">
        <div class="stat-label">Collection Started</div>
        <div class="stat-value">{statusDisplay.collectionStarted}</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Days Running</div>
        <div class="stat-value">{statusDisplay.daysRunning || '—'}</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Total Records</div>
        <div class="stat-value">{statusDisplay.totalRecords.toLocaleString()}</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Last Updated</div>
        <div class="stat-value">{statusDisplay.lastUpdated}</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Usable v7 %</div>
        <div class="stat-value">{statusDisplay.usableV7Percent}</div>
      </div>
    </section>
    
    <section class="data-definitions">
      <h2>Data Definitions</h2>
      <ul>
        <li><strong>Total Records:</strong> Validated v7 snapshots (700+ spot samples) passing dataset health gates.</li>
        <li><strong>Status Updates:</strong> Status is refreshed when new exports are published.</li>
      </ul>
    </section>
  </div>
</BaseLayout>

<style>
  .status-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }
  
  .stat-card {
    padding: var(--space-4);
    border: 1px solid var(--border);
    border-radius: 4px;
  }
  
  .stat-label {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: var(--space-1);
  }
  
  .stat-value {
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--text);
  }
  
  .platform-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .platform-card {
    padding: var(--space-4);
    border: 1px solid var(--border);
    border-radius: 4px;
  }
  
  .platform-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }
  
  .platform-header h3 {
    margin: 0;
    font-size: 1.125rem;
  }
  
  .status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 500;
    border: 1px solid var(--border2);
    background: var(--panel);
    color: var(--text-muted);
  }
  
  .status-badge.active {
    background-color: var(--accent-subtle);
    border-color: var(--accent-dim);
    color: var(--accent);
  }
  
  .status-badge.paused {
    background-color: var(--panel2);
    color: var(--text-muted);
  }
  
  .status-badge.inactive {
    background-color: var(--panel2);
    color: var(--text-muted);
  }
  
  .platform-records {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.95rem;
  }
  
  .notes {
    padding: var(--space-4);
    background-color: var(--panel2);
    border-left: 3px solid var(--accent);
    border-radius: 4px;
  }
  
  .data-definitions ul {
    list-style: none;
    padding: 0;
  }
  
  .artifacts-readiness {
    margin-bottom: var(--space-6);
  }
  
  .readiness-box {
    padding: var(--space-4);
    border-radius: 4px;
    border-left: 4px solid var(--accent);
  }
  
  .readiness-box.pass {
    background-color: rgba(16, 185, 129, 0.1);
    border-color: #10b981;
  }
  
  .readiness-box.fail {
    background-color: rgba(239, 68, 68, 0.1);
    border-color: #ef4444;
  }
  
  .readiness-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }
  
  .status-badge {
    padding: 2px 8px;
    border-radius: 3px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }
  
  .readiness-box.pass .status-badge {
    background-color: #10b981;
    color: white;
  }
  
  .readiness-box.fail .status-badge {
    background-color: #ef4444;
    color: white;
  }
  
  .readiness-details p {
    margin: var(--space-2) 0;
    color: var(--text-muted);
  }
  
  .success-msg {
    color: #10b981 !important;
    font-weight: 500;
  }
  
  .error-msg {
    color: #ef4444 !important;
    font-weight: 500;
  }
  
  .readiness-footer {
    margin-top: var(--space-3);
    padding-top: var(--space-3);
    border-top: 1px solid var(--panel);
    font-size: 0.9rem;
    color: var(--text-muted);
  }
    margin: 0;
  }
  
  .data-definitions li {
    padding: var(--space-3);
    margin-bottom: var(--space-2);
    background-color: var(--panel2);
    border-radius: 4px;
    border-left: 3px solid var(--accent-dim);
  }
  
  .data-definitions strong {
    color: var(--text);
  }
  
  .warning-banner {
    padding: var(--space-4);
    margin-bottom: var(--space-4);
    background-color: var(--panel2);
    border-left: 3px solid #f59e0b;
    border-radius: 4px;
  }
  
  .warning-banner p {
    margin: 0;
    color: var(--text-muted);
  }
</style>
