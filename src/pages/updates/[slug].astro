---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const updates = await getCollection('updates');
  return updates.map(update => ({
    params: { slug: update.slug },
    props: { update },
  }));
}

const { update } = Astro.props;
const { Content } = await update.render();
---

<BaseLayout 
  title={`${update.data.title} - Instrumetriq`}
  description={update.data.description}
>
  <article class="update-post">
    <header class="post-header">
      <h1>{update.data.title}</h1>
      <div class="post-meta">
        <time datetime={update.data.date.toISOString()}>
          {update.data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        <span class="separator">•</span>
        <span>By {update.data.author}</span>
      </div>
    </header>
    
    <div class="post-content">
      <Content />
    </div>
    
    <footer class="post-footer">
      <a href="/updates" class="back-link">← Back to Updates</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .update-post {
    max-width: 800px;
  }
  
  .post-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
  }
  
  .post-header h1 {
    margin-bottom: var(--space-md);
  }
  
  .post-meta {
    display: flex;
    gap: var(--space-sm);
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }
  
  .separator {
    opacity: 0.5;
  }
  
  .post-content {
    line-height: 1.8;
  }
  
  .post-content :global(h2) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }
  
  .post-content :global(h3) {
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }
  
  .post-content :global(p) {
    margin-bottom: var(--space-md);
  }
  
  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--space-md);
  }
  
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
  }
  
  .post-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }
  
  .back-link {
    color: var(--color-accent);
    font-size: 0.95rem;
  }
  
  .back-link:hover {
    color: var(--color-accent-dim);
  }
</style>
