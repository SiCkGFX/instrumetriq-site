---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import PageHero from '../../components/PageHero.astro';

export async function getStaticPaths() {
  const updates = await getCollection('updates');
  return updates.map(update => ({
    params: { slug: update.slug },
    props: { update },
  }));
}

const { update } = Astro.props;
const { Content } = await update.render();
---

<BaseLayout 
  title={`${update.data.title} - Instrumetriq`}
  description={update.data.description}
>
  <PageHero
    eyebrow="UPDATES"
    title={update.data.title}
    subtitle={update.data.description}
  />
  <div class="pageContent">
    <div class="post-meta">
      <time datetime={update.data.date.toISOString()}>
        {update.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
      <span class="separator">•</span>
      <span>By {update.data.author}</span>
    </div>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      <a href="/updates" class="back-link">← Back to Updates</a>
    </footer>
  </div>
</BaseLayout>

<style>
  .post-meta {
    display: flex;
    gap: var(--space-2);
    color: var(--text-muted);
    font-size: 0.95rem;
    margin-bottom: var(--space-4);
  }
  
  .separator {
    opacity: 0.5;
  }
  
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
  }
  
  .post-footer {
    margin-top: var(--space-6);
    padding-top: var(--space-4);
    border-top: 1px solid var(--border);
  }
  
  .back-link {
    color: var(--text);
    font-size: 0.95rem;
  }
  
  .back-link:hover {
    color: var(--accent);
  }

  /* Specific table overrides for update posts */
  .post-content :global(table) {
    margin: var(--space-6) 0;
    width: 100%;
    table-layout: fixed;
  }

  /* 
     Align columns for "Production Summary" and "Validation Report" tables.
     We use fixed widths to ensure the "Value" and "Status" columns 
     align visually across the two tables.
  */
  .post-content :global(th:nth-child(1)),
  .post-content :global(td:nth-child(1)) {
    width: 25%;
  }

  .post-content :global(th:nth-child(2)),
  .post-content :global(td:nth-child(2)) {
    width: 25%;
  }
  
  .post-content :global(th:nth-child(3)),
  .post-content :global(td:nth-child(3)) {
    width: 50%;
  }

  .post-content :global(th),
  .post-content :global(td) {
    padding: var(--space-2) var(--space-4);
    text-align: left;
  }

  /* Reset edge padding so table stays aligned with text */
  .post-content :global(th:first-child),
  .post-content :global(td:first-child) {
    padding-left: var(--space-2);
  }

  .post-content :global(th:last-child),
  .post-content :global(td:last-child) {
    padding-right: var(--space-2);
  }
</style>
