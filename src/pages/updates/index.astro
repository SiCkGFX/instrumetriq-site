---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const updates = await getCollection('updates');
const sortedUpdates = updates.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout 
  title="Updates - Instrumetriq"
  description="Latest updates from the Instrumetriq project"
>
  <article>
    <h1>Updates</h1>
    <p class="intro">Stay informed about Instrumetriq's progress, milestones, and announcements.</p>
    
    <div class="updates-list">
      {sortedUpdates.map(update => (
        <a href={`/updates/${update.slug}`} class="update-card">
          <div class="update-header">
            <h2>{update.data.title}</h2>
            <time datetime={update.data.date.toISOString()}>
              {update.data.date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>
          <p class="update-description">{update.data.description}</p>
          <div class="update-author">By {update.data.author}</div>
        </a>
      ))}
    </div>
  </article>
</BaseLayout>

<style>
  article {
    max-width: 900px;
  }
  
  h1 {
    margin-bottom: var(--space-sm);
  }
  
  .intro {
    color: var(--color-text-muted);
    margin-bottom: var(--space-2xl);
  }
  
  .updates-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .update-card {
    display: block;
    padding: var(--space-lg);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    transition: all 0.2s ease;
    color: var(--color-text);
  }
  
  .update-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }
  
  .update-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-sm);
    gap: var(--space-md);
  }
  
  .update-header h2 {
    margin: 0;
    font-size: 1.5rem;
  }
  
  .update-header time {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    white-space: nowrap;
  }
  
  .update-description {
    margin-bottom: var(--space-sm);
    color: var(--color-text-muted);
  }
  
  .update-author {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  @media (max-width: 768px) {
    .update-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
