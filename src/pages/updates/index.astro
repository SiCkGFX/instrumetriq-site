---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import PageHero from '../../components/PageHero.astro';
import fs from 'node:fs';
import path from 'node:path';

const updates = await getCollection('updates');
const sortedUpdates = updates.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Load archive statistics
let archiveStats = null;
try {
  const archiveStatsPath = path.join(process.cwd(), 'public/data/archive_stats.json');
  archiveStats = JSON.parse(fs.readFileSync(archiveStatsPath, 'utf-8'));
} catch (error) {
  console.error('Failed to load archive stats:', error);
}
---

<BaseLayout 
  title="Updates - Instrumetriq"
  description="Latest updates from the Instrumetriq project"
>
  <PageHero
    eyebrow="UPDATES"
    title="Updates"
    subtitle="Milestones, notes, and announcements from the project."
  />
  <div class="pageContent">
    {archiveStats && (
      <div class="archive-summary">
        <div class="summary-stats">
          <div class="summary-stat">
            <span class="summary-value">{archiveStats.total_entries_all_time.toLocaleString()}</span>
            <span class="summary-label">entries archived</span>
          </div>
          <div class="summary-stat">
            <span class="summary-value">{archiveStats.total_days}</span>
            <span class="summary-label">days</span>
          </div>
          <div class="summary-stat">
            <span class="summary-value">{new Date(archiveStats.last_entry_ts_utc).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
            <span class="summary-label">last entry</span>
          </div>
        </div>
      </div>
    )}
    <div class="updates-list">
      {sortedUpdates.map(update => (
        <a href={`/updates/${update.slug}`} class="update-card">
          <div class="update-header">
            <h2>{update.data.title}</h2>
            <time datetime={update.data.date.toISOString()}>
              {update.data.date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>
          <p class="update-description">{update.data.description}</p>
          <div class="update-author">By {update.data.author}</div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .archive-summary {
    margin-bottom: var(--space-6);
    padding: var(--space-4);
    background: rgba(0, 188, 212, 0.05);
    border: 1px solid rgba(0, 188, 212, 0.2);
    border-radius: 4px;
  }

  .summary-stats {
    display: flex;
    gap: var(--space-6);
    justify-content: center;
    flex-wrap: wrap;
  }

  .summary-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
  }

  .summary-value {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--accent);
  }

  .summary-label {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .updates-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }
  
  .update-card {
    display: block;
    padding: var(--space-4);
    border: 1px solid var(--border);
    border-radius: 4px;
    transition: all 0.2s ease;
    color: var(--text);
  }
  
  .update-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }
  
  .update-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-2);
    gap: var(--space-3);
  }
  
  .update-header h2 {
    margin: 0;
    font-size: 1.5rem;
  }
  
  .update-header time {
    color: var(--text-muted);
    font-size: 0.875rem;
    white-space: nowrap;
  }
  
  .update-description {
    margin-bottom: var(--space-2);
    color: var(--text-muted);
  }
  
  .update-author {
    font-size: 0.875rem;
    color: var(--text-muted);
  }
  
  @media (max-width: 768px) {
    .update-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
